@model AdminControl.Core.Entities.User

<div class="container my-5">
    <div class="card shadow-lg rounded-4 mx-auto" style="max-width:600px;">
        <div class="text-center mt-4">
            @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
            {
                <img src="@Model.ProfilePictureUrl"
                     class="img-fluid rounded-circle shadow-sm"
                     style="max-height:150px; width:150px;"
                     alt="Profile Picture" />
            }
            else
            {
                <div class="text-muted fst-italic">No Profile Picture</div>
            }
            <h5 class="mt-3">@Model.FullName</h5>
            <small class="text-muted">@Model.UserRole</small>
        </div>

        <div class="card-body mt-3">
            <form asp-action="Profile" asp-controller="Account" method="post" id="userForm">
                <!-- IDs (read-only always) -->
                <div class="mb-3">
                    <label class="form-label">Vendor ID</label>
                    <input type="text" class="form-control" name="VendorID" value="@Model.VendorID" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">User ID</label>
                    <input type="text" class="form-control" name="UserID" value="@Model.UserID" readonly />
                </div>

                <!-- Editable fields -->
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" class="form-control editable" name="Username" value="@Model.Username" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">Full Name</label>
                    <input type="text" class="form-control editable" name="FullName" value="@Model.FullName" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control editable" name="Email" value="@Model.Email" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control editable" name="Password" value="@Model.Password" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">Profile Picture File Name</label>
                    <input type="text" class="form-control editable" name="ProfilePictureFileName" value="@Model.ProfilePictureFileName" readonly />
                </div>

                <!-- Buttons -->
                <div class="text-center">
                    <button type="button" id="editBtn" class="btn btn-primary me-2">Edit</button>
                    <button type="submit" name="action" value="Update" id="saveBtn" class="btn btn-success" disabled>Save</button>
                    <button type="submit" name="action" value="Logout" class="btn btn-danger">Logout</button>
                    <a asp-action="Index" asp-controller="Account" class="btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/profile.js"></script>
}

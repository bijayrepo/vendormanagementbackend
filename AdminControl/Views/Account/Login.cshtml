@model AdminControl.Core.Entities.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginPartial.cshtml";
}
<form asp-action="Login" method="post" novalidate>
    <div class="mb-3 text-start">
        <label asp-for="Username" class="form-label fw-semibold"></label>
        <input asp-for="Username" class="form-control" placeholder="Enter username" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="mb-3 text-start">
        <label asp-for="Password" class="form-label fw-semibold"></label>
        <input asp-for="Password" class="form-control" type="password" placeholder="Enter password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary fw-semibold">Login</button>
        <a asp-action="Register" asp-controller="Account" class="btn btn-secondary fw-semibold">Register</a>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="ForgotPassword" asp-controller="Account" class="text-decoration-none">Forgot Password?</a>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

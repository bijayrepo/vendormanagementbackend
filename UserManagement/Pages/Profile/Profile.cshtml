@page
@model UserManagement.Pages.Profile.ProfileModel
@{
    Layout = "_AdminLayoutModel";  // Use Admin layout for authenticated pages
    ViewData["Title"] = "User Profile";
    ViewData["ActivePage"] = "Profile"; // Highlights the sidebar link
}

<div class="card shadow-sm p-4 mb-4" style="max-width:600px; margin:auto;">
    <h3 class="fw-bold text-primary mb-4 text-center">User Profile</h3>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success text-center">@Model.Message</div>
    }

    <form method="post" novalidate>
        <div class="mb-3">
            <label asp-for="Input.Username" class="form-label fw-semibold"></label>
            <input asp-for="Input.Username" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="Input.FullName" class="form-label fw-semibold"></label>
            <input asp-for="Input.FullName" class="form-control" placeholder="Enter full name" />
            <span asp-validation-for="Input.FullName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label fw-semibold"></label>
            <input asp-for="Input.Email" class="form-control" placeholder="Enter email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        @* <div class="mb-3">
            <label asp-for="Input.PhoneNumber" class="form-label fw-semibold"></label>
            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Enter phone number" />
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div> *@

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary fw-semibold">Update Profile</button>
            <a asp-page="/Account/ChangePassword" class="btn btn-secondary fw-semibold">Change Password</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

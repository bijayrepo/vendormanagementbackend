@page
@model UserManagement.Pages.Account.LoginModel
@{
    Layout = "_LoginPartial";
    ViewData["Title"] = "Login";
}

<form method="post" novalidate>
    <div class="mb-3 text-start">
        <label asp-for="Input.Username" class="form-label fw-semibold"></label>
        <input asp-for="Input.Username" class="form-control" placeholder="Enter username" />
        <span asp-validation-for="Input.Username" class="text-danger"></span>
    </div>

    <div class="mb-3 text-start">
        <label asp-for="Input.Password" class="form-label fw-semibold"></label>
        <input asp-for="Input.Password" class="form-control" type="password" placeholder="Enter password" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="d-grid gap-2">
        <!-- Login button -->
        <button type="submit" class="btn btn-primary fw-semibold">Login</button>

        <!-- Register button -->
        <a asp-page="/Account/Register" class="btn btn-secondary fw-semibold">Register</a>
    </div>

    <div class="mt-3 text-center">
        <a asp-page="/Account/ForgotPassword" class="text-decoration-none">Forgot Password?</a>
    </div>
</form>

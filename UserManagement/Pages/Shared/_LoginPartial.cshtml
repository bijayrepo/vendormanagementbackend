@model UserManagement.Pages.Shared._LoginPartialModel
@{
} *@

@* _AuthLayout.cshtml - Layout for Login/Register pages *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Next Data Cloud</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #4f8ef7, #1e3c72);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
        }

        .auth-container {
            max-width: 420px;
            width: 100%;
            background-color: #ffffff;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 6px 25px rgba(0, 0, 0, 0.15);
            animation: fadeInUp 0.6s ease-in-out;
        }

        .brand-logo {
            width: 64px;
            height: 64px;
            margin-bottom: 1rem;
            object-fit: contain;
        }
        @@keyframes fadeInUp {
            from

        {
            transform: translateY(20px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }

        }
    </style>
</head>
<body>
    <main class="d-flex align-items-center justify-content-center vh-100">
        <div class="auth-container text-center">
            <img src="~/images/logo.png" alt="Next Data Cloud Logo" class="brand-logo" />
            <h3 class="fw-bold text-primary mb-4">@ViewData["Title"]</h3>
            @RenderBody()
        </div>
    </main>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
